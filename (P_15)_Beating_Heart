//lesson 15 beating heart
// Variables
// Pin connections to the LED Matrix
// DIN pin -> Pin 12
// CLK pin -> Pin 11
// CS pin  -> Pin 10
LedControl lc = LedControl(12, 11, 10, 1);

//variables
// Smiling face bitmap
byte smile[8] = {
  B00111100,
  B01000010,
  B10100101,
  B10000001,
  B10100101,
  B10011001,
  B01000010,
  B00111100
};

// Sad face bitmap
byte sad[8] = {
  B00111100,
  B01000010,
  B10100101,
  B10000001,
  B10011001,
  B10100101,
  B01000010,
  B00111100
};

// Function to display a pattern on the LED Matrix
void displayPattern(byte *pattern) {
  for (int row = 0; row < 8; row++) {
    lc.setRow(0, row, pattern[row]);
  }
}

void setup() {
  // Initialize the LED control library
  lc.shutdown(0, false); // Wake up the display
  lc.setIntensity(0, 8); // Set brightness level (0-15)
  lc.clearDisplay(0);    // Clear the display
}

void loop() {
  // Display the smiling face
  displayPattern(smile);
  delay(1000);

  // Display the sad face
  displayPattern(sad);
  delay(1000);
}
