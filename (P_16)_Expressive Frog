//project 16: an expressive frog

#include<LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,16,2);  

void setup() 
{
  lcd.init();        
  lcd.backlight();   
}

void loop() {
  lcd.setCursor(0, 0);             
  lcd.print("HELLO, PETER SIR");
  lcd.print("Sorry Sorry :)");
  
  for (int j = 0; j < 100; j++) {  
    delay(1000);                   
    
    lcd.setCursor(0, 1);         
    lcd.print("HOW ARE YOU!! ");  
    lcd.print(j);                  
  }
